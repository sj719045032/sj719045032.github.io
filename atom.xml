r&gt;&lt;span class=&quot;line&quot;&gt;    &amp;#125;else&amp;#123;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;        numbers=Array.apply(null, arguments);//将arguments对象转换成数组&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    &amp;#125;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    var maxDecLength=0;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    numbers.forEach(function(i) &amp;#123;//找出最长的小数位数&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;        var decStr = i.toString();&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;        if (decStr.indexOf(&amp;apos;.&amp;apos;) !== -1) &amp;#123;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;            var decLength = decStr.split(&amp;apos;.&amp;apos;)[1].length;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;            if (decLength &amp;gt; maxDecLength)&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;                maxDecLength = decLength;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;        &amp;#125;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    &amp;#125;);&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;    return numbers.map(function(i)&amp;#123;//将小数转换成整数&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;            return i*Math.pow(10,maxDecLength);&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;        &amp;#125;).reduce(function(a,b)&amp;#123;//数字相加&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;            return a+b;&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;        &amp;#125;)/Math.pow(10,maxDecLength);//得到最终结果&lt;/span&gt;&lt;br&gt;&lt;span class=&quot;line&quot;&gt;&amp;#125;&lt;/span&gt;&lt;br&gt;&lt;/pre&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/table&gt;&lt;/figure&gt;&lt;/p&gt;
